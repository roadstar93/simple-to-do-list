<% include ../partials/header %>

<h1>Lists page</h1>

<ul>
    <% user.items.forEach(function(list) { %>
        <li><%= list.text %> <span><a href="/list/<%=list._id %>/edit">Edit</a> 
            <form action="/list/<%=list._id%>?_method=DELETE" method="post" style="display:inline">
                <input type="submit" value="Delete">
            </form></span></li>
    <% }) %>

</ul>

<h1>Add new item</h1>

<form action="/list" method="post">
    <input type="text" name="text" placeholder="item">
    <input type="Submit" value="Add item">
</form>

<a href="/logout">Logout</a>

